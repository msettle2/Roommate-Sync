<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <!-- https://developer.mozilla.org/en-US/docs/Web/HTTP/CSP -->

  <!-- <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; script-src 'self'"
    /> -->
  <!-- <meta
      http-equiv="X-Content-Security-Policy"
      content="default-src 'self'; script-src 'self'"
    /> -->

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link
        href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=PT+Serif&family=Patua+One&display=swap"
        rel="stylesheet">
  

    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Font Link for Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

    <script src="/js/calendar.js" defer></script>

    <title>Roommate Sync</title>

  </head>
  <body>
    <nav>
      <div class="nav-container">
          <a href="/">
              <h1>
                  <img src="/images/sync-logo.png" alt="logo" width="40" height="40">Roommate&nbsp;<span class="sync-header">Sync</span>
              </h1>
          </a>
          <a href="/users/logout"><button type="button" class="logout-btn">Logout</button></a>
      </div>
  </nav>
    <main class="menu-main">
      <section class="calendar-section">
        <div class="calendar-wrapper">
            <header>
              <p class="current-date"></p>
              <div class="icons">
                <span id="prev" class="material-symbols-rounded"></span>
                <span id="next" class="material-symbols-rounded"></span>
              </div>
            </header>
            <div class="calendar">
              <ul class="weeks">
                <li>Sun</li>
                <li>Mon</li>
                <li>Tue</li>
                <li>Wed</li>
                <li>Thu</li>
                <li>Fri</li>
                <li>Sat</li>
              </ul>
              <ul class="days"></ul>
            </div>
          </div>
          <article class="event-wrapper">
            <div class="event-container">
              <div class="event-title-container">
                <div class="header-wrapper">
                  <p class="event-header"></p>
                  <p class="event-title"></p>
                </div>
                <p class="event-desc">No Event Today</p>

                <% if(typeof calendarEvents !="undefined"){%>
                <!-- CalendarEvent Display logic-->
                <p class="calendarEventsLength hidden"><%=calendarEvents.length%></p>
                <%calendarEvents.forEach(calendarEvent=>{%>
                  
                  <p class="monthofYear hidden"><%=calendarEvent.date.getUTCMonth()+1%></p>
                  

                  <p class="dayOfMonth hidden"><%=calendarEvent.date.getUTCDate()%></p>

                  <h3 class="calendarTitle hidden"><%=calendarEvent.title%>:</h2>

                  <p class="calendarDesc hidden"><%=calendarEvent.description%></p>

                <%});%>
                  <%}%>
              </div>
              <h2 class="plus">&#43</h2>
             </div>
            
             <!-- Calendar Form-->

            <form method='POST' action = '/calendarEvents'>
              <div class="event-input-container hidden">
                  <div class="formInput">
                      <label for="title">Event title:</label>
                      <input type="text" class="event-input" id="title" name="title" required>
                  </div>
          
                  <div class="formInput">
                      <label for="description">Event Info</label>
                      <input type="text" class="event-input" id="description" name="description" required>
                  </div>

                  <div class="formInput">
                    <label for="date">Event Info</label>
                    <input type="date" class="event-input" id="date" name="date" required>
                  </div>
          
                  <input type="submit" value="Submit" class="login-button">
                  
              </div>
          </form>
          </article>
    </section>

    <section class="menu-section">
            <div class="profile-container">
                <h2>Welcome back, <%= user.firstName %>!</h2>
                <img src="<%= user.image %>" alt="profile account logo" width="70" height="70">
            </div>
            <div class="menu-options">
              <a href="/users/friend">
                <div class="menu-icon-container">
                  <img src="/images/add-friend.png" alt="friends icon" width="75" height="75">
                  <div class="menu-icon-label">Roommates</div>
                </div>
              </a>
              <a href="/messages">
                <div class="menu-icon-container">
                    <img src="/images/message.png" alt="messages icon" width="75" height="75">
                    <div class="menu-icon-label">Messages</div>
                </div>
              </a>
              <a href="/chores">
                <div class="menu-icon-container">
                  <img src="/images/chores.png" alt="chores icon" width="75" height="75">
                  <div class="menu-icon-label">Chores</div>
                </div>
              </a>
              <a href="/users/profile">
                <div class="menu-icon-container">
                    <img src="/images/settings.png" alt="profile icon" width="75" height="75">
                    <div class="menu-icon-label">Profile</div>
                </div>
              </a>
            </div>
    </section>
  </main>
</body>

</html>